{
  "name": "ukiyonovels-server",
  "version": "0.0.1",
  "author": "Ukiyo Roa <jnpco.98@gmail.com>",
  "scripts": {
    "start": "node --inspect=9000 --require dotenv/config -r ts-node/register src/server.ts",
    "dev": "ts-node-dev --respawn --inspect=9000 --require dotenv/config src/server.ts",
    "migration:create": "ts-node ./node_modules/typeorm/cli.js migration:generate -c development -n",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert -c development",
    "build": "tsc",
    "test": "yarn run test:resetdb && jest",
    "test:resetdb": "ts-node --require dotenv/config ./src/test-utilities/reset-database.ts"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.2",
    "@types/express-jwt": "^0.0.42",
    "@types/express-session": "^1.15.16",
    "@types/faker": "^4.1.9",
    "@types/graphql-relay": "^0.4.11",
    "@types/graphql-type-json": "^0.3.2",
    "@types/jest": "^25.1.3",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/morgan": "^1.7.37",
    "@types/node": "^8.0.29",
    "@types/pluralize": "^0.0.29",
    "faker": "^4.1.0",
    "jest": "^25.1.0",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.2",
    "apollo-server-express": "^2.10.1",
    "bcrypt": "^4.0.0",
    "class-validator": "^0.11.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "graphql": "^14.6.0",
    "graphql-relay": "^0.6.0",
    "graphql-type-json": "^0.3.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "pg": "^7.18.2",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.6",
    "typeorm": "^0.2.22",
    "uuid": "^3.4.0"
  }
}
